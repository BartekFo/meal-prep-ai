{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "extends": ["ultracite"],
  "overrides": [
    {
      "includes": ["**/*.svelte", "**/*.astro", "**/*.vue"],

      "linter": {
        "rules": {
          "style": {
            "useConst": "off",

            "useImportType": "off"
          },

          "correctness": {
            "noUnusedVariables": "off",

            "noUnusedImports": "off"
          }
        }
      }
    }
  ]
}
